{{#if bulkSelectEnabled}}
  <td class='star'>
    <input type="checkbox" class="bulk-select">
  </td>
{{/if}}


<a href='{{topic.summaryUrl}}' class="pinned-project"></a>

<div class="project-card main-link">

  {{raw 'list/topic-meta' likesHeat=likesHeat title=view.title topic=topic}}
  

    {{#if socialStyle}}
      <div class="project-title">
      {{raw "list/topic-list-title" topic=topic socialStyle=socialStyle showTopicPostBadges=showTopicPostBadges}}
      {{raw "list/topic-category" category=topic.category}}
      </div>
    {{/if}}

    {{#if showLikes}}
    <div class="num likes">
      {{#if hasLikes}}
        <a href='{{topic.summaryUrl}}'>
          {{number topic.like_count}} {{d-icon 'heart'}}</div>
        </a>
      {{/if}}
    {{/if}}

    {{#if showOpLikes}}
    <div class="num likes">
      {{#if hasOpLikes}}
        <a href='{{topic.summaryUrl}}'>
          {{number topic.op_like_count}} {{d-icon 'heart'}}</div>
        </a>
      {{/if}}
    {{/if}}

    {{#if showActions}}
      {{raw "list/topic-actions" likeCount=likeCount topicActions=topicActions}}
    {{/if}}



  {{#if socialStyle}}
      {{raw-plugin-outlet name="topic-list-social-footer"}}
  {{/if}}



    

    {{#if showPosters}}
      {{raw "list/posters-column" posters=topic.posters}}
    {{/if}}

    {{#if showParticipants}}
      {{raw "list/posters-column" posters=topic.participants}}
    {{/if}}

    <span class="num views {{topic.viewsHeat}}"> {{d-icon 'eye'}} {{number topic.views numberKey="views_long"}} Views</span>

  

  {{raw "list/action-list" topic=topic postNumbers=topic.liked_post_numbers className="likes" icon="heart"}}

      <a href='{{topic.url}}' class="project-link"></a>
</div>






  {{#if showThumbnail}}
      {{raw "list/topic-thumbnail" topic=topic thumbnails=thumbnails category=category}}
  {{/if}}


  <div class="topic-excerpt">
    {{{dir-span topic.escapedExcerpt}}}
    {{#if topic.excerptTruncated}}
      <a href="{{topic.url}}">{{i18n 'read_more'}}</a>
    {{/if}}
  </div>








